@using System.Collections;

@model SVPP.Models.Partner

@{
    ViewData["Title"] = "Create";
}

@if (!this.User.IsInRole("Guest"))
{
    <h1>New Partner</h1>
}
else
{

    <h1>New Guest</h1>
}


<hr />
