                    "Select...",
                    new { @class = "form-control" })
                <span asp-validation-for="Skill_3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preference_1" class="control-label"></label>
                @Html.DropDownList("Preference_1",
                    new SelectList((IEnumerable)ViewData["preferences"]),
                    "Select...",
                    new { @class = "form-control" })
                <span asp-validation-for="Preference_1" class="text-danger"></span>
